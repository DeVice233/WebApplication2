@model WebApplication2.Models.RegisterModel
 
<h2>Регистрация</h2>
 <div class="container text-center align-middle justify-content-center d-flex">
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
    <div class="form-label-group">
            <label asp-for="Name">Введите Логин</label><br />
            <input type="text" required="" autofocus="" asp-for="Name" class="form-control" placeholder="Логин"/>
            <span asp-validation-for="Name" />
        </div>
        <div class="form-label-group">
            <label asp-for="Email">Введите Email</label><br />
            <input type="email" asp-for="Email" required="" autofocus="" id="inputEmail" class="form-control" placeholder="Email адрес"/>
            <span asp-validation-for="Email" />
        </div>
        <div  class="form-label-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" type="password"  required="" autofocus="" id="inputPassword" placeholder="Пароль"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-label-group">
            <input asp-for="ConfirmPassword" class="form-control" type="password"  required="" autofocus="" id="inputPassword" placeholder="Повторите Пароль"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-label-group">
           <button class="btn btn-lg mt-3 btn-primary btn-block" type="submit">Зарегистрироваться</button>
        </div>
    </div>
</form>
</div>
