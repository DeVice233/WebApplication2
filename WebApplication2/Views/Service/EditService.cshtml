@model WebApplication2.Models.Service
@{
    ViewBag.Title = "Редактирование услуги";
}
<form asp-action="editService" asp-controller="Service" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="Duration" class="control-label">Длительность</label>
        <input type="text" asp-for="Duration" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="text" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>