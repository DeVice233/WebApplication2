@model WebApplication2.Models.User
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>
 
        <dt>Логин</dt>
        <dd>@Model.Name</dd>

         <dt>Email</dt>
        <dd>@Model.Email</dd>


         <dt>Пароль</dt>
        <dd>@Model.Password</dd>
    </dl>
</div>